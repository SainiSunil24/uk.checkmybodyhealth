


{{ 'cmbh-review-block.css' | asset_url | stylesheet_tag }}


<div class="cmbh-review-block container--vertical-space-small" style="background-color: {{ section.settings.background_colour }};" >
<div class="container--large {% if section.settings.background_colour != "#ffffff" %} gutter-bottom--large gutter-top--large {% endif  %}">

    {%- render 'section-heading', heading: section.settings.heading, subheading: section.settings.subheading, heading_size:
    section.settings.section_heading_size, section_layout: section.settings.section_heading_layout, button:
    section.settings.cta_label, button_label: section.settings.cta_label, link: section.settings.cta_url, seo_h_tag:
    section.settings.seo_h_tag -%}



    <div class="">
    <!-- TrustBox widget - Carousel -->
    <div class="trustpilot-widget" data-locale="en-GB" data-template-id="53aa8912dec7e10d38f59f36"
      data-businessunit-id="5f0492d2b7656c0001eb1036" data-style-height="140px" data-style-width="100%" data-theme="light"
      data-stars="4,5" data-review-languages="en">
      <a href="https://uk.trustpilot.com/review/checkmybodyhealth.com" target="_blank" rel="noopener">Trustpilot</a>
    </div>
    <!-- End TrustBox widget -->
    </div>

  </div>
</div>





